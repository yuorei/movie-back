type User implements Node {
  id: ID! @goField(forceResolver: true)
  name: String!
  profileImageURL: String!
}

type UserPayload {
  id: ID!
  name: String!
  profileImageURL: String!
}

extend type Query {
  users: [User!]!
  user(id: ID!): User!
}

input UserInput {
  name: String!
}



type Mutation {
  registerUser(input: UserInput!): UserPayload!
}
